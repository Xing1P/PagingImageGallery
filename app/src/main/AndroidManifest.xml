<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.davidferrand.pagingimagegallery">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PagingImageGallery">
        <activity
            android:name=".PortalActivity"
            android:label="Paging Image Gallery: Portal">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".recyclerview.v1.GalleryActivity"
            android:label="RecyclerView v1" />
        <activity
            android:name=".viewpager.v1.GalleryActivity"
            android:label="ViewPager v1" />
    </application>

</manifest>